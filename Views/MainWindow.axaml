<Window xmlns="https://github.com/avaloniaui"
        xmlns:rxui="clr-namespace:Avalonia.ReactiveUI;assembly=Avalonia.ReactiveUI"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="GuitarConfigurator.NetCore.Views.MainWindow"
        TransparencyLevelHint="AcrylicBlur"
        Icon="/Assets/avalonia-logo.ico"
        Title="GuitarConfiguratorSharp"
        Background="Transparent"
        ExtendClientAreaToDecorationsHint="True">

    <DockPanel>
        <ExperimentalAcrylicBorder Height="30" DockPanel.Dock="Top" IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial TintColor="#222222" MaterialOpacity="0.2" TintOpacity="1" />
            </ExperimentalAcrylicBorder.Material>
            <Panel>
            </Panel>
        </ExperimentalAcrylicBorder>
        <ExperimentalAcrylicBorder>
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial TintColor="#222222" MaterialOpacity="0.2" TintOpacity="1" />
            </ExperimentalAcrylicBorder.Material>
            <rxui:RoutedViewHost VerticalAlignment="Stretch" Router="{Binding Router}"/>
        </ExperimentalAcrylicBorder>
        
    </DockPanel>
</Window>