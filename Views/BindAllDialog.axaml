<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:system="clr-namespace:System;assembly=System.Runtime"
        xmlns:viewModels="clr-namespace:GuitarConfigurator.NetCore.ViewModels"
        xmlns:netCore="clr-namespace:GuitarConfigurator.NetCore"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="GuitarConfigurator.NetCore.Views.BindAllWindow"
        TransparencyLevelHint="AcrylicBlur"
        WindowStartupLocation="CenterOwner"
        Icon="/Assets/avalonia-logo.ico"
        Title="GuitarConfiguratorSharp"
        Background="Transparent"
        Width="800"
        Height="600"
        MinWidth="800"
        MinHeight="600"
        x:CompileBindings="True"
        x:DataType="viewModels:BindAllWindowViewModel"
        ExtendClientAreaToDecorationsHint="True"
        WindowState="Maximized">
    <Panel>
        <Panel.Resources>
            <netCore:PinToStringConverter x:Key="PinToStringConverter" />
            <DataTemplate x:Key="PinToStringTemplate" DataType="system:Object">
                <TextBlock x:CompileBindings="False">
                    <TextBlock.Text>
                        <MultiBinding Converter="{StaticResource PinToStringConverter }">
                            <Binding />
                            <Binding Path="$parent[Panel].DataContext.Microcontroller" />
                            <Binding Path="$parent[Panel].DataContext.Model" />
                            <Binding Path="$parent[ComboBox].SelectedItem" />
                            <Binding Path="$parent[Panel].DataContext.Output" />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </DataTemplate>
        </Panel.Resources>
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    TintColor="Black"
                    TintOpacity="1"
                    MaterialOpacity="0.65" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>
        <Panel Margin="40">
            <DockPanel HorizontalAlignment="Stretch">
                <StackPanel Height="50" Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Bottom">
                    <Button Margin="0 0 5 0" Command="{Binding ContinueCommand}" Content="Continue" Classes="accent" />
                    <Button Command="{Binding AbortCommand}" Content="Abort" />
                </StackPanel>
                <ScrollViewer>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Binding:" />
                            <Label Content="{Binding LocalisedName}" />
                        </StackPanel>
                        <Image ToolTip.Tip="{Binding LocalisedName}"
                               HorizontalAlignment="Center" Width="75"
                               Source="{Binding Image}" />
                        <ComboBox VerticalAlignment="Center" SelectedItem="{Binding Input.Pin}"
                                  Items="{Binding Input.AvailablePins}"
                                  ItemTemplate="{StaticResource PinToStringTemplate}" />
                        <Label IsVisible="{Binding IsAnalog}" Content="Move the axis you want to use" />
                        <Label IsVisible="{Binding !IsAnalog}" Content="Press the button you want to use" />
                    </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </Panel>
    </Panel>
</Window>